<form action="/oceans" method="post" class="form-horizontal col-sm-offset-2">

    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name: </label>
        <input type="text" id="name" name="ocean[name]" autofocus class="col-sm-6">
    </div>

    <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Image: </label>
        <input type="url" id="image" name="ocean[image]" class="col-sm-6">
    </div>

    <div class="form-group">
        <label for="max_depth" class="col-sm-2 control-label">Max. Depth: </label>
        <input type="number" id="max_depth" name="ocean[max_depth]" class="col-sm-6">
    </div>

    <div class="form-group">
        <label for="earth_percentage" class="col-sm-2 control-label">Earth Percentage: </label>
        <input type="number" id="earth_percentage" name="ocean[earth_percentage]" class="col-sm-6">
    </div>

    <div class="form-group">
        <label for="countries" class="col-sm-2 control-label">Countries: </label>
        <input type="text" id="countries" name="ocean[countries]" class="col-sm-6">
    </div>

    <button class="col-sm-2 col-sm-offset-4 text-center">Add Ocean</button>
</form>
