<div class="row author-buttons">
  <div class="col-md-4 col-md-offset-1">
    <h2><%= @author.name %></h2>

    <!-- we use @author because we're 'posting' it to that path -->
    <%= link_to 'Delete Author', @author, :method => 'delete', :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-default' %>
    <%= link_to 'Edit Author', edit_author_path, :class => 'btn btn-default' %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <%= image_tag @author.image, :class => 'show-pic' %>
  </div>






  <div class="col-md-6 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>Info:</p>
      </div>

      <div class="panel-body">
        <ul>
          <li>DOB: <%= @author.dob.strftime('%B %e, %Y') if @author.dob %></li>
          <li>Nationality: <%= @author.nationality %></li>
        </ul>

        <!-- shows an author's book covers if he/she has any books associated with them -->

      </div>
    </div>
  </div>

   <div class="col-md-6 col-md-offset-1 book-grid">
    <% if @author.books.any? %>
      <h2>Books:</h2>
      <% @author.books.each do |book| %>
        <div class="col-md-4 thumbnail">
          <%= link_to image_tag(book.image), book %>
        </div>
      <% end %>
    <% end %>
  </div>


</div>
