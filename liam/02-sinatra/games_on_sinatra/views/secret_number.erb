      <a href="<%= "/secret-number/guess?n=" + ((i+1).to_s) %>"><%= i  + 1 %></a>
      </div>
  <% end %>
</div>

<h3>Would you like another game?</h3>

<div>
  <%= erb :games, :layout => false %>
</div>