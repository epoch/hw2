<!-- Content Section -->
<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="section-heading">Edit Author</h1>
        <form action="/users/<%= @user.id %>" method="post">
          <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control" id="name" name="name" value="<%= @user.name %>">
          </div>

          <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control" id="email" name="email" value="<%= @user.email %>">
          </div>

          <div class="form-group">
            <label for="image">Image:</label>
            <input class="form-control" id="image" name="image" value="<%= @user.image %>">
          </div>

          <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" rows="3" id="description" name="description"><%= @user.description %></textarea>
          </div>

          <input class="btn btn-default" type="submit" value="Update User">
        </form>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>