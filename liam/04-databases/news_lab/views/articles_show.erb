<!-- Content Section -->
<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="section-heading"><%= @article.title %></h1>
        <p>Category: <%= @article.category %></p>
        <pre><%= @article.body %></pre>
        <img class="article" src="<%= @article.image %>" alt="<%= @article.title %> Photo">

        <% if @article.user %>
          <h2>User</h2>
          <a href="/users/<%= @article.user.id %>">
            <%= @article.user.name %>
          </a>
        <% end %>

        <div class="controls">
          <a href="/articles/<%= @article.id %>/delete">Delete</a>
          <a href="/articles/<%= @article.id %>/edit">Edit</a>
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>