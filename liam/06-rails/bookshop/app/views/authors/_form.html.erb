<%= form_for @author, :html => {:class => 'sm-col-6'} do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, :class => 'block full-width field-light' %>

    <%= f.label :nationality %>
    <%= f.text_field :nationality, :class => 'block full-width field-light' %>

    <%= f.label :dob, "Date of Birth" %>
    <%= f.text_field :dob, :class => 'block full-width field-light' %>

    <%= f.label :bio %>
    <%= f.text_area :bio, :class => 'block full-width field-light' %>

    <%= f.label :image %>
    <%= f.url_field :image, :class => 'block full-width field-light' %>
  </div>

  <%= f.submit :class => 'h3 button button-big mb4 button-blue' %>

<% end %>