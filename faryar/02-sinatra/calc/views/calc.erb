<form action="/calc">
   <input name="first" placeholder="First Number" value ="<%= params[:first] %>">
   <input name="operator" placeholder="Mathematical Operator" value ="<%= params[:operator] %>">
   <input name="second" placeholder="Second Number" value ="<%= params[:second] %>">

   <button>Calculate</button>
</form>


<h1>The result is:</h1>

<em><%= @result %></em>

<p>Thank you for using Less Crappy Calc</p>
