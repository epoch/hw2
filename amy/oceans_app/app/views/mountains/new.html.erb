<form action="/mountains" method="post">
    
    <label for="name">Name: </label>
    <input id="name" name="mountain[name]" autofocus>
 
    <label for="height">Height: </label>
    <input type="number" id="height" name="mountain[height]">

    <label for="country">Country: </label>
    <input type="text" id="country" name="mountain[country]">

    <label for="nearest_ocean">Nearest ocean: </label>
    <input type="text" id="nearest_ocean" name="mountain[nearest_ocean]">

    <label for="image">Image: </label>
    <input type="url" id="image" name="mountain[image]">

    <button>Mountain me!</button>

</form>
