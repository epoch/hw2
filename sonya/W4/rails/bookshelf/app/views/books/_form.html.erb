<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>

  <%= f.label :publisher %>
  <%= f.text_field :publisher %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.label :author_id %>
  <%= f.select :author_id, Author.all.map { |author| [author.name, author.id] }, :include_blank => true %>  

  <hr>
  <%= f.submit %>
  
<% end %>