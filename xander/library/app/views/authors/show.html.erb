<h1><%= @author.name %></h1>
<p>
    <%= link_to 'Edit Author', edit_author_path(@author) %>
    <%= button_to 'Delete Author', @author, :method => 'delete', :data => { :confirm => 'Are you sure you want to delete this author?' }%>
</p>
<%= image_tag @author.image, :class => 'portrait' %>
     <ul>
        <li>Name: <%= @author.name %></li>
        <li>Nationality: <%= @author.nationality %></li>
        <li>University: <%= @author.university %></li>
        <li>Date of Birth: <%= @author.dob.strftime('%A %B %e, %Y') if @author.dob %></li>
        <li>Date of Death: <%= @author.dod.strftime('%A %B %e, %Y') if @author.dod %></li>
        <li>Career Highlight: <%= @author.highlight %></li>
        <li>Books Published: <%= @author.num_books %></li>
    </ul>
<% if @author.books.any? %>
    <h2>Books</h2>
<% end %>


<% @author.books.each do |book| %>
        <%= link_to(image_tag(book.image, :class => 'thumb'), book) %>
<% end %>