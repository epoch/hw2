<h2><%= @plant.name %></h2>

<% if @plant.butterflies.any? %>
    <h3>Butterflies:</h3>
    <ul>
    <% @plant.butterflies.each do |butterfly| %>
        <li><a href="/butterflies/<%= butterfly.id %>"><%= butterfly.name %></a></li>
    <% end %>        
    </ul>
<% end %>

<img class="plant" src="<%= @plant.image %>"> 

<div class="controls">
    <a href="/plants/<%= @plant.id %>/delete">Delete</a>
    <a href="/plants/<%= @plant.id %>/edit">Edit</a>
</div>
